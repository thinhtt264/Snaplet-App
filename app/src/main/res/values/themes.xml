<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main app theme -->
    <style name="Theme.Snaplet" parent="Theme.AppCompat.Light.NoActionBar" />
    
    <!-- Splash screen theme -->
    <style name="Theme.Snaplet.Splash" parent="Theme.SplashScreen">
        <!-- Full black splash screen background -->
        <item name="windowSplashScreenBackground">@color/black</item>
        
        <!-- Transparent 1x1 icon (invisible) for full black splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_transparent</item>
        
        <!-- Remove branding image if any -->
        <item name="android:windowSplashScreenBrandingImage">@null</item>
        
        <!-- Instant transition (no animation delay) -->
        <item name="windowSplashScreenAnimationDuration">0</item>
        
        <!-- Theme to use after splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.Snaplet</item>
    </style>

</resources>